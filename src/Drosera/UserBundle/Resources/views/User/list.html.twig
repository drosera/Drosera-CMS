{% extends 'DroseraAdminBundle::layout.html.twig' %}

{% block content %}
    <h1>Seznam uživatelů</h1>
    <a href="{{ path('drosera_user_admin_user_create') }}">Vytvořit uživatele</a> 
    <table>
        <tr>
            <td>Login</td>
            <td>Jméno</td>
            <td>E-mail</td>
            <td>Uživatelská skupina</td>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.fullname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.usergroup }}</td>
                <td><a href="{{ path('drosera_user_admin_user_edit', {'id':user.id}) }}">Upravit</a></td>
                <td><a href="{{ path('drosera_user_admin_user_delete', {'id':user.id}) }}">Odstranit</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}